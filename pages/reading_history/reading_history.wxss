}
.history .cart{
  margin-top: 10rpx;
  padding: 5rpx 20rpx 20rpx 20rpx;
  border-top: solid 3rpx rgb(212, 209, 209);
  border-bottom: solid 3rpx rgb(212, 209, 209);
  box-shadow:0px 5px 10px -5px rgba(184, 189, 189, 0.726);
}
.history .title{
  font-weight: 800;
  font-size: 40rpx;
}

.history .contents{
  margin: 10rpx auto;
}

.history .foots{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: start;
  
}
.foots .author_name, .time, .reading_num, .comment_num{
  width: 500rpx;
  color: #666;
  font-size: 23rpx; 
}

