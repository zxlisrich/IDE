<view class="tabs">
  <view class="tabs_title bg-white">
    <view
      wx:for="{{tabs}}"
      wx:key="id"
      bindtap="handleItemTap"
      data-index="{{index}}"
      class="title_item {{item.isActive?'active':''}}"
    >
      {{item.value}}
    </view>
  </view> 
  <view class="tabs_contents">
    <slot ></slot>
  </view>

</view>

